@model List<eBookStore.Models.UserNotificationModel>

<h2>Your Notifications</h2>

@if (Model.Count == 0)
{
    <p>No notifications available.</p>
}
else
{
    <ul>
        @foreach (var notification in Model)
        {
            <li>
                <strong>@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm"):</strong>
                @notification.Message
            </li>
        }
    </ul>
}