@model eBookStore.Models.ViewModels.GalleryPageViewModel
@{
    ViewData["Title"] = "Gallery";
}

<div class="Gallery-container d-flex">


    <div class="d-flex flex-column flex-shrink-0 p-3 bg-secondary" style="width: 280px;">
        <h4 class="text-center">Categorys</h4>

        <hr>
            <ul class="categorysList nav nav-pills flex-column mb-auto">

                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
                        All-Caregorys
                    </a>
                </li>

                @foreach(var cate in Model.listOfCategorys)
                {
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
                            @cate
                        </a>
                    </li>
                }

            </ul>
        <hr>


    </div>


    <div class="flex-column w-100 ms-4">

        <hr>
            <h2>Welcome to the book gallery:</h2>
        <hr>

        <div class="Book-Cards row">

            <div class="card" style="width: 18rem;">
                <img src="\images\bookCovers\default_book_cover.jpg" class="card-img-top" alt="...">

                <div class="card-body d-grid">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="buy-buttom text-center";">Buy-Now</a>
                </div>
            </div>  

            @foreach(var book in Model.allBooks)
            {
                <div class="card" style="width: 18rem;">
                    <a href="@Url.Action("Index", "Book")/@book.book.id">
                        <img src="\images\bookCovers\@book.coverModel.imgName" class="card-img-top" alt="@book.coverModel.imgName">
                    </a>
                    <div class="card-body d-grid">
                        <h5 class="card-title">@book.book.title</h5>
                        <p class="card-text">
                            <!-- Need to fill all book info-->
                        </p>

                        <a href="#" class="buy-buttom text-center";">Buy-Now</a>
                    </div>
                </div> 
            }


        </div>





    </div>


</div>



@section Scripts {

<script>

    const BookCards = document.querySelector('.Book-Cards');
    const bookCategorysContainer = document.querySelector('.categorysList');
    var galleryModel = @Json.Serialize(Model);

    var categoryList = galleryModel.listOfCategorys;
    console.log(categoryList);

    function populateCategorys()
    {
        for(let category of categoryList)
        {
            const categoryLabel = document.createElement('li');

            const categoryLabelA = document.createElement('a');
            categoryLabelA.className = "nav-link link-dark";
            categoryLabelA.textContent = category;

            const categoryLabelSVG = document.createElement('svg');
            categoryLabelSVG.className = "bi me-2";
            categoryLabelSVG.height = "16";
            categoryLabelSVG.width = "16";

            categoryLabel.appendChild(categoryLabelA);
            categoryLabelA.appendChild(categoryLabelSVG);
            bookCategorysContainer.appendChild(categoryLabel);
        }
    }



    function populateBookCards(bookName)
    {
        const Book = document.createElement('div');
        Book.className = 'card';
        Book.style = 'width: 18rem';

        const img = document.createElement('img');
        img.src = '\\images\\bookCovers\\default_book_cover.jpg';
        img.style = 'card-img-top';
        img.alt = bookName;
        Book.appendChild(img);

        const BookBody = document.createElement('div');
        Book.appendChild(BookBody);

        const bookTitle = document.createElement('h5');
        bookTitle.className = "card-title";
        BookBody.appendChild(bookTitle);

        const bookText = document.createElement('p');
        bookText.className ='card-text';
        BookBody.appendChild(bookText);


        const bookBTN = document.createElement('a');
        bookBTN.href = '#';
        bookBTN.className ='btn btn-primary';
        bookBTN.textContent = 'Buy-Now';
        BookBody.appendChild(bookBTN);

        BookCards.appendChild(Book);
    }




</script>

}