@using eBookStore.Models.ViewModels
@model IEnumerable<BookViewModel>
@{
    ViewData["Title"] = "Shopping Cart";
    var currentUser = Context.Session.GetInt32("userId") ?? 0;
}

<div class="container py-5">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Your shopping cart is empty. <a href="@Url.Action("Index", "Book")" class="alert-link">Continue shopping</a>
        </div>
    }
    else
    {
        <!-- Cart Summary -->
        <div class="row">
            <div class="col-lg-8">
                <!-- Cart Items -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Shopping Cart (@Model.Count() items)</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var bookVM in Model ?? Enumerable.Empty<BookViewModel>())
                        {
                            <div class="row mb-4 align-items-center">
                                <div class="col-md-2">
                                    <img src="@(bookVM?.coverModel?.imgName ?? "/images/default-cover.jpg")" 
                                         class="img-fluid rounded" 
                                         alt="@(bookVM?.book?.title ?? "Book")">
                                </div>
                                <div class="col-md-5">
                                    <h5>@(bookVM?.book?.title ?? "Untitled")</h5>
                                    @if (bookVM?.authorModel != null)
                                    {
                                        <p class="text-muted mb-0">
                                            by @bookVM.authorModel.name
                                        </p>
                                    }
                                    @if (bookVM?.genreModel != null)
                                    {
                                        <span class="badge bg-secondary">@bookVM.genreModel.name</span>
                                    }
                                </div>
                                <div class="col-md-2 text-end">
                                    @if (bookVM?.book != null)
                                    {
                                        <h6 class="mb-0">$@bookVM.book.buyingPrice</h6>
                                    }
                                </div>
                                <div class="col-md-3 text-end">
                                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post" 
                                          style="display: inline;">
                                        <input type="hidden" name="bookId" value="@bookVM?.book?.id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                            @if (!Model.Last().Equals(bookVM))
                            {
                                <hr class="my-3">
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal</span>
                            <span>$@Model.Sum(b => b?.book?.buyingPrice ?? 0)</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total</strong>
                            <strong>$@Model.Sum(b => b?.book?.buyingPrice ?? 0)</strong>
                        </div>
                        <form asp-controller="Cart" asp-action="Checkout" method="post">
                            <button type="submit" class="btn btn-primary w-100">
                                Proceed to Checkout
                            </button>
                        </form>
                        <a href="@Url.Action("Index", "Book")" class="btn btn-outline-secondary w-100 mt-2">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const books = @Html.Raw(Json.Serialize(Model ?? Enumerable.Empty<BookViewModel>()));
            console.log('Cart contents:', books);
        });
    </script>
}
