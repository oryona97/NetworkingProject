<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eBookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand animate__animated animate__fadeIn" asp-area="" asp-controller="Home" asp-action="Index">
                    📚 eBookStore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="landingPage">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="PersonalLibrary">My Library</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ShowShoppingCart">
                                Cart <span class="badge bg-accent cart-count">0</span>
                            </a>
                        </li>
                        <li class="nav-item user-menu">
                            <a class="nav-link" href="#">
                                <i class="bi bi-person-circle"></i> Account
                            </a>
                            <div class="user-menu-content">
                                <a class="dropdown-item" asp-controller="Home" asp-action="showLogin">Login</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="register">Register</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="SearchForm">Search</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="profile">Account Overview</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </div>

		<footer class="footer">
				<div class="container">
						<div class="footer-grid">
								<div class="footer-brand">
										<h3>📚 eBookStore</h3>
										<p>Your ultimate destination for digital reading. Discover millions of eBooks, and more.</p>
								</div>
								
								<div class="footer-links">
										<h5>Quick Links</h5>
										<a asp-controller="Home" asp-action="HomePage">Home</a>
										<a asp-controller="Home" asp-action="PersonalLibrary">My Library</a>
										<a asp-controller="Home" asp-action="Privacy">Privacy</a>
								</div>

								<div class="footer-contact">
										<h5>Contact Us</h5>
										<a href="mailto:support@ebookstore.com">support@ebookstore.com</a>
										<p>1-800-EBOOKS</p>
								</div>
						</div>
						
						<div class="footer-bottom">
								<p>&copy; 2024 eBookStore. Dor Gabriel Israeli the 1st.</p>
						</div>
				</div>
		</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
