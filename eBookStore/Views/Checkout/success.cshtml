@{
    ViewData["Title"] = "Order Confirmation";
}

<style>
    .success-card {
        border: 1px solid #eee;
        border-radius: 8px;
        background: #fff;
        transition: all 0.2s ease;
    }

    .status-badge {
        background-color: #d4edda;
        color: #155724;
        padding: 0.5rem 1rem;
        border-radius: 4px;
    }

    .order-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
    }

    .continue-btn {
        transition: background-color 0.2s ease;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>

            <div class="success-card p-5">
                <div class="text-center">
                    <h2 class="mb-4">Thank You for Your Purchase!</h2>
                    <p class="text-muted mb-4">
                        Your order has been successfully processed. You will receive an email confirmation shortly with your purchase details.
                    </p>

                    <div class="order-details mb-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Order Status:</span>
                            <span class="status-badge">Confirmed</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Order Number:</span>
                            <span class="fw-bold">@ViewBag.OrderId</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <p class="mb-1">Your eBooks will be available in:</p>
                        <h5>
                            <a href="@Url.Action("Index", "PersonalLibrary")" class="text-decoration-none text-primary">
                                My Library
                            </a>
                        </h5>
                    </div>

                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "PersonalLibrary")" 
                           class="btn btn-primary py-2 continue-btn">
                            Go to My Library
                        </a>
                        <a href="@Url.Action("landingPage", "Home")" 
                           class="btn btn-outline-secondary py-2 continue-btn">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small mb-0">
                    Need help? <a href="@Url.Action("Contact", "Home")" class="text-decoration-none">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>
