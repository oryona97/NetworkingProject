@model List<eBookStore.Models.ViewModels.BookViewModel>




<form method="get" asp-action="showBookBySearch" asp-controller="Home" class="container mt-4">
    <div class="row g-3">
        <div class="col-md-4">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="title" class="form-control" />
        </div>
        <div class="col-md-4">
            <label for="publisherId" class="form-label">Publisher ID:</label>
            <input type="number" id="publisherId" name="publisherId" class="form-control" />
        </div>
        <div class="col-md-4">
            <label for="genreId" class="form-label">Genre ID:</label>
            <input type="number" id="genreId" name="genreId" class="form-control" />
        </div>
        <div class="col-md-4">
            <label for="minPrice" class="form-label">Min Price:</label>
            <input type="number" id="minPrice" name="minPrice" step="0.01" class="form-control" />
        </div>
        <div class="col-md-4">
            <label for="maxPrice" class="form-label">Max Price:</label>
            <input type="number" id="maxPrice" name="maxPrice" step="0.01" class="form-control" />
        </div>
        <div class="col-md-4">
            <label for="fromDate" class="form-label">From Date:</label>
            <input type="date" id="fromDate" name="fromDate" class="form-control" />
        </div>
        <div class="col-md-4">
            <label for="toDate" class="form-label">To Date:</label>
            <input type="date" id="toDate" name="toDate" class="form-control" />
        </div>
    </div>
    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>


